{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["vue"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
